<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hr.math.kviz.BirajRazinuActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pozadina"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/linija"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearRazine"
            android:orientation="vertical" />

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/linija"
        android:background="@color/colorPrimary"
        android:layout_above="@+id/resetirajButton"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resetiraj"
        android:id="@+id/resetirajButton"
        android:padding="10dp"
        android:background="#ffffff"
        android:textSize="17sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
