<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hr.math.kviz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="#99ffffff"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/prvaZvjezdica"
            android:src="@drawable/zvjezdica_off"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/drugaZvjezdica"
            android:src="@drawable/zvjezdica_off"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/trecaZvjezdica"
            android:src="@drawable/zvjezdica_off"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text=""
            android:id="@+id/razinaLabel"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"/>

        <ImageButton
            android:layout_width="50dp"
            android:scaleType="centerInside"
            android:layout_height="50dp"
            android:src="@drawable/start"
            android:background="#00000000"
            android:id="@+id/buttonIgraj"/>

    </LinearLayout>

</RelativeLayout>
